</head>

<body class="bg-secondary">
    <header class="text-center bg-balck">
        <div class="py-4">
            <a class="text-decoration-none text-yellow" href="/menu">
                <h2 class="cabecalho-titulo-h2">PETISCARIA</h2>
                <h1 class="cabecalho-titulo-h1">Bela Vista</h1>
            </a>
        </div>
    </header>

    <nav class="links">
        <a class="text-black text-decoration-none" href=""><strong>Pedidos</strong></a>
        <a class="text-black text-decoration-none" href="/menu">Novo Pedido</a>
    </nav>

    <main class="container">
        <section>
            <div class="row mt-5">
                {{#each pedidos}}
                <div class="col-lg-3 text-center rounded-3">
                    <div class="bg-white rounded-3 p-3 mb-4">
                        <p>ID: {{dataValues.id}}</p>
                        <p><strong>NÂ° mesa</strong>: {{dataValues.numeroMesa}}</p>
                        <p><strong>Cliente</strong>: {{dataValues.nomeCliente}}</p>
                        <p><strong>Garcom</strong>: {{dataValues.garcom}}</p>

                        <button class="btn btn-success text-light">
                            Editar
                        </button>

                        <a href="/del-pedido/{{dataValues.id}}">
                            <button class="btn btn-danger">Encerrar Pedido</button>
                        </a> 
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
