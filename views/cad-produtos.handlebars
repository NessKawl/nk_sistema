<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-secondary">
    <header class="text-center text-yellow bg-balck">
        <div class="py-4">
            <a class="text-decoration-none text-yellow" href="/">
                <h2 class="cabecalho-titulo-h2">PETISCARIA</h2>
                <h1 class="cabecalho-titulo-h1">Bela Vista</h1>
            </a>
        </div>
    </header>

    <nav class="links">
        <a class="text-black text-decoration-none" href=""><strong>Cadastro</strong></a>
        <a class="text-black text-decoration-none" href="lista-produtos">Produtos</a>
    </nav>

    <main class="container">
       <section class="d-flex justify-content-center my-5">

            <form action="/cad-produto" method="POST" class="bg-white p-5 rounded-2"  >
            
                <label class="form-label">Digite o nome do produto:</label>
                <input class="form-control " type="text" name="nomeProduto" placeholder="Digite o nome">
                <label class="form-label">Digite o preço do produto:</label>
                <input class="form-control" type="number" name="precoProduto" placeholder="Digite o preco">
                <label class="form-label">Insira a imagem:</label>
                <input class="form-control" type="text" name="imgProduto" placeholder="Digite o link">

                <label>Categoria</label>
                <select class="form-select" aria-label="Default select example" name="categoriaPorduto">
                    <option selected >-- Selecione --</option>
                    <option value="porcoes" id="">Porções</option>
                    <option value="lanches" id="">Laches</option>
                    <option value="salgados" id="">Salgados</option>
                    <option value="bebidas" id="">Bebidas</option>
                    <option value="almoco" id="">Almoço</option>
                </select>
            
                <div class="d-flex justify-content-end mt-3">
                    <button class="btn bg-yellow bg-yellow-opacity" type="submit">Cadastrar</button>
                </div>

            </form>

        </section>
    </main>
</body>